<div class="rnk-hero-bonus-card">
  <div class="rnk-hero-card-header">
    {{#if speakerImg}}
      <a class="rnk-hero-card-actor" data-actor-id="{{actorId}}"><img src="{{speakerImg}}" class="rnk-hero-card-img" onerror="this.onerror=null;this.src='icons/svg/mystery-man.svg'" /></a>
    {{/if}}
    <div class="rnk-hero-card-title">{{speakerName}} spent {{points}} hero point{{#unless isOne}}s{{/unless}}</div>
  </div>
  <div class="rnk-hero-card-body">
    {{#if formula}}
      <div>{{localize "rnk-hero-forge.chat.rolled"}}: <strong>{{formula}}</strong> = <strong>{{bonus}}</strong></div>
    {{else}}
      <div>{{localize "rnk-hero-forge.chat.bonus"}}: <strong>+{{bonus}}</strong></div>
    {{/if}}
  </div>
</div>
